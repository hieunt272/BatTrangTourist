@model BatTrangTourist.ViewModel.ListPhotoLibrary
@using PagedList.Mvc
@{
    ViewBag.Title = "Danh sách Album";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Danh sách Album</h2>
@if (ViewBag.Result == "success")
{
    <div id="AlertBox" class="alert alert-success"><strong>Thêm mới Album thành công</strong></div>
}
@if (ViewBag.Result == "update")
{
    <div id="AlertBox" class="alert alert-success"><strong>Cập nhật Album thành công</strong></div>
}
<a class="btn quick-link" href="@Url.Action("PhotoLibrary")"><i class="fal fa-plus-circle mr-1"></i>Thêm Album</a>
<div class="box_content">
    <div class="form-search-list">
        <form action="@Url.Action("ListPhotoLibrary")" method="get" class="ml-0">
            <p>
                Tìm Album @Html.TextBoxFor(a => a.Name, new { @class = "w300" })
                <button type="submit" class="btn-search">Tìm kiếm</button>
            </p>
        </form>
    </div>
    <p>Có tổng số <strong>@Model.Photolibraries.TotalItemCount</strong> Album</p>
    <form id="productList">
        <table class="list_table tablecenter table-striped">
            <tbody>
                <tr>
                    <th style="width: 100px">STT</th>
                    <th style="width: 50px">Hình ảnh</th>
                    <th>Tên Album</th>
                    <th>Hoạt động</th>
                    <th style="width: 140px;"></th>
                </tr>
                @foreach (var photolibrary in Model.Photolibraries)
                {
                    <tr data-id="@photolibrary.Id">
                        <td style="width: 150px;">
                            <input type="number" name="Sort" value="@photolibrary.Sort" class="form_control w100" />
                        </td>
                        <td>
                            @if (photolibrary.ListImage != null)
                            {
                                <img class="img-border" src="@Path.Combine("/images/photoLibraries/", photolibrary.ListImage.Split(',')[0])?w=100&h=100" alt="" />
                            }
                            else
                            {
                                @:NO PICTURE
                            }
                        </td>
                        <td class="left">
                            <div>
                                <a href="@Url.Action("UpdatePhotoLibrary", new { photoId = photolibrary.Id })">
                                    <strong>@photolibrary.AlbumName</strong>
                                </a>
                            </div>
                        </td>
                        <td>
                            @Html.EditorFor(a => photolibrary.Active, new { htmlAttributes = new { id = "Active" } })
                        </td>
                        <td>
                            <a href="javascript:;" onclick="updateInfo('@photolibrary.Id')">Cập nhật - </a>
                            @Html.ActionLink("Sửa", "UpdatePhotoLibrary", new { photoId = photolibrary.Id })
                            - <a href="javascript:;" onclick="deletePhotoLibrary('@photolibrary.Id')" class="red-warring">Xóa</a>
                        </td>
                    </tr>
                }
                @if (Model.Photolibraries.PageCount > 1)
                {
                    <tr>
                        <td colspan="9">@Html.PagedListPager(Model.Photolibraries, page => Url.Action("ListPhotoLibrary", new { page, name = Model.Name }))</td>
                    </tr>
                }
            </tbody>
        </table>
    </form>
</div>
@section scripts
{
    <script type="text/javascript">
        function deletePhotoLibrary(id) {
            if (confirm("Bạn có chắc chắn Album này không?")) {
                $.post("/Vcms/DeletePhotoLibrary", { photoId: id }, function (data) {
                    if (data) {
                        $.toast({
                            text: 'Xóa Album thành công',
                            position: 'bottom-right',
                            icon: 'success',
                        })
                        $("tr[data-id='" + id + "']").fadeOut();
                    }
                    else {
                        $.toast({
                            text: 'Quá trình thực hiện không thành công. Hãy thử lại',
                            icon: 'error',
                        })
                    }
                });
            }
        }

        function updateInfo(id) {
            var divId = $('tr[data-id="' + id + '"]');
            var sort = divId.find("input[name=Sort]").val();
            var active = divId.find("input#Active").prop("checked");
            var home = divId.find("input#Home").prop("checked");

            $.post("/Vcms/QuickUpdate", { photoId: id, active, sort, home },
                function (data) {
                    if (data) {
                        $.toast({
                            text: 'Cập nhật thành công',
                            position: 'bottom-right',
                            icon: 'success',
                        })
                    } else {
                        $.toast({
                            text: 'Quá trình thực hiện không thành công. Hãy thử lại',
                            position: 'bottom-right',
                            icon: 'error',
                        })
                        window.location.reload();
                    };
                });
        }
    </script>
}